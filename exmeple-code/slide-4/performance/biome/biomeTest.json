{
	"$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"indentStyle": "space",
			"indentWidth": 2,
			"lineWidth": 140,
			"arrowParentheses": "asNeeded",
			"quoteStyle": "single"
		}
	},
	"files": {
		"ignore": [
			"node_modules",
			"dist",
			"reports",
			"config",
			"package-lock.json",
			".git",
			".project",
			".idea",
			".vscode",
			".nyc_output",
			".sonarlint",
			".stats",
			"/.angular/cache"
		]
	}
}
